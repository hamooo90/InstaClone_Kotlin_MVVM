<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#A5153D"/>
            <stroke
                android:width="1dp"
                android:color="#DF416E"/>
            <corners
                android:radius="10dp"/>

        </shape>

    </item>
    <item>
        <shape>
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="#bd1947"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="1dp"
                android:color="#DF416E"
                />
        </shape>
    </item>
</selector>


