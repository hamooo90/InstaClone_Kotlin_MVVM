<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#EFEFEF"/>
            <stroke
                android:width="2dp"
                android:color="@android:color/darker_gray"/>
            <corners
                android:radius="10dp"/>

        </shape>

    </item>
    <item>
        <shape>
                <corners
                    android:radius="10dp"
                    />
                <solid
                    android:color="#FFFFFF"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />

                <stroke
                    android:width="2dp"
                    android:color="@android:color/darker_gray"
                    />
        </shape>
    </item>
</selector>



